pipeline {
    agent any  // Use a valid agent type
    tools {
        maven '392' // Ensure this Maven version is configured in Jenkins under Global Tool Configuration
    }
    stages {
        stage('Clean Dir') {
            steps {
                deleteDir() // Clean the workspace
            }
        }
        stage('Maven version') {
            steps {
                sh 'mvn --version'
            }
        }
        stage('Maven test') {
            steps {
                dir('simple-java-maven-app') { // Ensure this matches the repo folder name
                    sh 'mvn test'
                }
            }
        }
        stage('Maven build') {
            steps {
                dir('simple-java-maven-app') { // Run in the correct directory
                    sh 'mvn package'
                }
            }
        }
    }
}
